update_interval 4.0
background yes
out_to_console no
out_to_stderr no
total_run_times 0
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
draw_shades no
draw_outline no
draw_borders no
border_width 1
double_buffer yes
stippled_borders 1
no_buffers yes
alignment top_left
gap_x 5
gap_y 20
use_spacer none
minimum_size 300,800
maximum_width 300

use_xft yes
xftfont Monaco:size=10
xftalpha 0.1
uppercase no
default_color white
default_shade_color white
default_outline_color black

draw_graph_borders no
show_graph_scale no
show_graph_range no

cpu_avg_samples 2
top_cpu_separate false
max_port_monitor_connections 5
net_avg_samples 2

mpd_host 127.0.0.1
mpd_port 6600
top_name_width 10



